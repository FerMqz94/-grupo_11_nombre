<!DOCTYPE html>
<html lang="es">
<head>
  <%- include("../partials/head", {view : "list"}) %>
</head>
<body class="body-list">
  <%- include("../partials/header", {list : "black", registro: true, ingreso: true }) %>

  <main class="page-content container">
    <div class="row">
      <% products.forEach(p => { %>
        <% p.images.forEach((img, index) => { %>
          <% if(index === 0) { %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <img src="/images/products/<%= img.name %>" class="card-img-top" alt="<%= p.name %>">
                <div class="card-body">
                  <h5 class="card-title"><%= p.name %></h5>
                  <p class="card-text"><%= p.description %></p>
                  <span class="price">$<%= p.price %></span>
                  <a href="/producto-detalle/<%= p.id %>" class="btn btn-primary">Ver m√°s</a>
                </div>
              </div>
            </div>
          <% } %>
        <% }) %>
      <% }) %>
    </div>
  </main>

  <%- include("../partials/footer") %>

  <!-- Bootstrap Script -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
