<!DOCTYPE html>
<html lang="es">


  <%- include("../partials/head", {view : "home"}) %>
  
<body class="body-home">
  <%- include("../partials/header", {home : "black", registro: true,ingreso: true }) %>
  

  <main class="home">
    <!-- Carrusel -->
    <div class="carrusel">

      <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
            class="active boton-carousel-personalizado" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
            class="boton-carousel-personalizado" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
            class="boton-carousel-personalizado" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner" style="height: 750px;">
          <div class="carousel-item carousel-custom-item active h-100">
            <img src="images/banner/imagen-carrusel-1.jpg" class="img-carosel d-block w-100 h-100" alt="imagen-carrusel-1"
              style="object-fit: cover;" />
          </div>
          <div class="carousel-item carousel-custom-item">
            <img src="images/banner/imagen-carrusel-2.jpg" class="img-carosel d-block w-100 h-100" alt="imagen-carrusel-2"
              style="object-fit: cover;" />
          </div>
          <div class="carousel-item carousel-custom-item">
            <img src="images/banner/imagen-carrusel-3.jpg" class="img-carosel d-block w-100 h-100" alt="imagen-carrusel-3"
              style="object-fit: cover;" />
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
          data-bs-slide="prev">
          <span class="carousel-control-prev-icon flecha-carousel" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
          data-bs-slide="next">
          <span class="carousel-control-next-icon flecha-carousel" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

    </div>

<!-- 
    Seccion informacion de envio --> 
     <div class="contenedor-info-envio">

      <article class="contenedor-envio-gratis">
        <h2><i class="fa-solid fa-truck"></i> ENVIO GRATIS DESDE $30.000</h2>
        <p>Correo Argentino / Andreani / Oca / Pickit</p>
      </article>

      <article class="contenedor-sito-seguro">
        <h2><i class="fa-solid fa-user-lock"></i> SITIO SEGURO</h2>
        <p>Protegemos tus datos</p>
      </article>

      <article class="contenedor-zinke-flex">
        <h2><i class="fa-solid fa-truck"></i> ZINKE FLEX</h2>
        <p>Envio a CABA y GBA en 24hs.</p>
      </article>

    </div> 

    <!-- Seccion de imagenes -->
    <div class="contenedor-subtitulos-imagenes">
      <div class="subitutlos-de-imagenes">
        <h2>OFF</h2>
        <h2>DESTACADO</h2>
      </div>
    </div>

    <div class="contenedor-imagenes">
      <a href="/producto-detalle">
        <div class="contenedor-imagenes-sector-1">
      </a>

      <%  products.forEach((p, index) => { %>
      <%  if(index <= 3) { %>
      <a href="/producto-detalle/<%= p.id %>"><img class="foto img-home" src="/images/products/<%= p.image[0]%>" alt="<%= p.image%>" /></a>
      <%  }  %>         
      <% })  %>      
    </div>

    <div class="contenedor-imagenes-sector-2">
        <% products.forEach((p, index) => { %>
        <%  if(index <= 7 && index > 3) { %>
        <a href="/producto-detalle/<%= p.id %>"><img class="foto img-home" src="/images/products/<%= p.image[0]%>" alt="<%= p.image[0]%>" /></a>
        <%  }  %>
        <% })  %>   
    </div>

    <div class="contenedor-imagenes-sector-3">
      <img class="foto img-home" src="/images/other/capsula-1.png" alt="image-beige" />
      <img class="foto img-home" src="/images/other/capsula-3.png" alt="image-3024" />
    </div>
    </div>

    <marquee behavior="" direction=""><img class="" src="../../../images/other/3024-titulo.png" alt=""><img  class=""  src="../../../images/other/american-titulo.png" alt=""><img class=""  src="../../../images/other/beige-titulo.png" alt=""><img src="../../../images/other/3024-titulo.png" alt=""><img src="../../../images/other/american-titulo.png" alt=""><img src="../../../images/other/beige-titulo.png" alt=""><img src="../../../images/other/3024-titulo.png" alt=""><img src="../../../images/other/american-titulo.png" alt=""><img src="../../../images/other/beige-titulo.png" alt=""><img src="../../../images/other/3024-titulo.png" alt=""><img src="../../../images/other/american-titulo.png" alt=""><img src="../../../images/other/beige-titulo.png" alt=""></marquee>

    <!-- Seccion de capsulas -->

    <!-- <img class="titulo-capsula" src="/images/other/titulo-capsulas.png" alt="titulo-capsulas" /> -->

    <div class="capsulas">

      <div class="contenedor-cap-sector-1">
        <img class="foto-capsula" src="/images/other/capsula-1.png" alt="capsula-1" />
        <img class="foto-capsula" src="/images/other/capsula-2.png" alt="capsula-2" />
      </div>

      <div class="contenedor-cap-sector-2">
        <img class="foto-capsula-3024" src="/images/other/capsula-3.png" alt="capsula-3" />
      </div>

    </div>



    <h2 class="mostrar-mas-productos">MOSTRAR MÁS PRODUCTOS</h2>

    <!-- Seccion mensaje de la marca grande -->
    <figure>
      <img class="mensaje-de-la-marca-grande" src="/images/banner/mensaje-de-la-marca-desktop-tablet.png"
        alt="mensaje-de-la-marca-desktop-tablet" />
    </figure>

    <!-- Seccion mensaje de la marca pequeño -->
    <figure>
      <img class="mensaje-de-la-marca-pequenio" src="/images/banner/mensaje-de-la-marca-phone.png"
        alt="mensaje-de-la-marca-phone" />
    </figure>


    <!-- extras -->

    <!-- flecha para arriba -->

    <a href=""><img src="/images/other/flecha hacia arriba.png" class="logo-flecha" alt="flecha" /></a>

    <!-- logo de whatsapp -->

    <img src="/images/other/whatsapp.png" class="logo-whatsapp" alt="whatsapp" />






  </main>





  <%- include("../partials/footer") %>


  
